@{
	ViewBag.Title = "EmailTemplate";
}


<div class="body-container" ng-controller="EmailTemplateController" id="Emailtemplate">

	<div class="header-div">
		<select name="LanguageId" kendo-drop-down-list k-ng-model="EmailObj.LanguageId"
				k-data-text-field="'Name'"
				k-value-primitive="true"
				k-on-change="OnChangeLanguage(kendoEvent)"
				k-data-value-field="'Id'"
				required validationMessage="*"
				k-option-label="'Select Language'"
				k-data-source="Languagedata"></select>
		<kendo-button class="k-primary" ng-show="EmailObj.LanguageId > 0" ng-click="onAddEmailtemplateClick()">Add Email</kendo-button>
	</div>
	<div class="table-div">
		<table id="emailtemplateTable" class="ui celled table" cellspacing="0" width="100%"></table>
	</div>

	@*<div class="row">
			<div class="col-md-8">
				<kendo-button class="k-primary" ng-click="onAddEmailtemplateClick()">Add Email</kendo-button>

				<select name="LanguageId" kendo-drop-down-list k-ng-model="EmailObj.LanguageId"
