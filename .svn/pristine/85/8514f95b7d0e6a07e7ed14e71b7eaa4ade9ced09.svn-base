body {
    font-family: Verdana;
    font-size: 13px;
    padding-top: 50px;
    padding-bottom: 20px;
    color: #222;
}

/* Set padding to keep content from hitting the edges */
.body-content {
    padding-left: 15px;
    padding-right: 15px;
}

.body-container {
    margin-top: 25px;
}

footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    text-align:center;
    /* Set the fixed height of the footer here */
    height: 60px;
    line-height: 60px; /* Vertically center the text there */
    background-color: #f5f5f5;
}

.header-div {
    /*float: left;*/
    position: relative;
    z-index: 10;
    width: 300px;
}

.table-div {
    /*float: right;*/
    position: relative;
    z-index: 5;
    top: -25px;
}

/* Override the default bootstrap behavior where horizontal description lists 
   will truncate terms that are too long to fit in the left column 
*/
.dl-horizontal dt {
    white-space: normal;
}

/* Set width on the form input elements since they're 100% wide by default */
input,
select,
textarea {
    max-width: 280px;
}


/* Window styling*/
.k-window-content .row {
    margin-right: -10px !important;
    margin-left: -10px !important;
}

/* Error */
span.k-widget.k-tooltip-validation {
    font-size: 12px !important;
    color: red !important;
    text-align: left;
    border: 0;
    padding: 0;
    margin: 0;
    background: none;
    box-shadow: none;
    color: red;
}

.k-invalid-msg .k-icon {
    display: none !important;
}

/*  datatable  */
.toolbar {
    float: left;
}

